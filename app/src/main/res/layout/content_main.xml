<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ArcActivity"
    tools:showIn="@layout/activity_arc"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnMVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MVC"
        android:onClick="onMVC"
        />

    <Button
        android:id="@+id/btnMVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MVP"
        android:onClick="onMVP"
        />

    <Button
        android:id="@+id/btnMVVM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MVVM"
        android:onClick="onMVVM"
        />

    <Button
        android:id="@+id/btnRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MVVM - Room"
        android:onClick="onMVVMRoom"
        />

    <Button
        android:id="@+id/btnRet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Ret"
        android:onClick="onRet"
        />
</LinearLayout>